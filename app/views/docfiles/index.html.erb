<div class="row">
  <h1>Documentos
    <% if can? :create, @docfiles %>
      <%= link_to  new_docfile_path, class:"btn-floating btn-large waves-effect waves-light bgcolortest" do %>
        <i class="material-icons">add</i>
      <%end%>
    <%end%>
  </h1>  
</div>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Tipo de documento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docfiles.each do |docfile| %>
      <tr>
        <td><%= docfile.name %></td>
        <td><%= docfile.description %></td>
        <td><%= docfile.file_type.name %></td>
        <td>
          <%= link_to url_for(docfile.doc_file), download:'',class:"btn-floating waves-effect waves-light blue" do %>
            <i class="material-icons">file_download</i>
          <%end%>
        </td>
        <td>
          <% if can? :update, @docfiles %>          
            <%= link_to edit_docfile_path(docfile),class:"btn-floating waves-effect waves-light yellow" do %>
              <i class="material-icons">edit</i>
            <%end%>
          <%end%>
        </td>
        <td>
          <% if can? :delete, @docfiles %>
            <%= link_to  docfile, method: :delete, data: { confirm: 'Are you sure?' },class:"btn-floating waves-effect waves-light red" do %>
              <i class="material-icons">delete</i>
            <%end%>
          <%end%>         
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


