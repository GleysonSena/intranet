<div class="container">
  <%= form_with(model: docfile, local: true) do |form| %>
    <% if docfile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(docfile.errors.count, "error") %> prohibited this docfile from being saved:</h2>

        <ul>
        <% docfile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label 'Nome Arquivo' %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label 'Descrição' %>
      <%= form.text_field :description %>
    </div>

    <div class="field">
      <%= collection_select(:docfile, :file_type_id, FileType.all, :id, :name) %>
    </div>

    <div class="field">
      <%= form.label 'Selecionar arquivo' %></br>
      <%= form.file_field :doc_file %></br>
    </div>
    </br>
    <div class="actions">
      <%= form.submit 'Criar Documento', class:'btn' %>
    </div>
    
  <% end %>
</div>