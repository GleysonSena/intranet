
  <h1>Marketing
    <% if can? :create, @docfiles %>
      <div class='fixed-action-btn'>
        <%= link_to  new_normative_path, class:"btn-floating btn-large waves-effect waves-light bgcolortest" do %>
          <i class="material-icons">add</i>
        <%end%>
      </div>
    <% end %>
  </h1>  

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @normatives.each do |normative| %>
      <tr>
        <td><%= normative.title %></td>
        <td><%= normative.description %></td>  
        <td>
          <%= link_to url_for(normative.file), download:'',class:"btn-floating waves-effect waves-light blue" do %>
            <i class="material-icons">file_download</i>
          <%end%>
        </td>
        <td>
          <% if can? :update, @normative %>          
            <%= link_to edit_normative_path(normative),class:"btn-floating waves-effect waves-light yellow" do %>
              <i class="material-icons">edit</i>
            <%end%>
          <%end%>
        </td>
        <td>
          <% if can? :delete, @normative %>
            <%= link_to  normative, method: :delete, data: { confirm: 'Are you sure?' },class:"btn-floating waves-effect waves-light red" do %>
              <i class="material-icons">delete</i>
            <%end%>
          <%end%>         
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>