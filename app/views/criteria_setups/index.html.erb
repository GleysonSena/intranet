<p id="notice"><%= notice %></p>

<h1>Criteria Setups</h1>

<table>
  <thead>
    <tr>
      <th>Criterium</th>
      <th>Criteria name</th>
      <th>Description</th>
      <th>Value</th>
      <th>Real value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria_setups.each do |criteria_setup| %>
      <tr>
        <td><%= criteria_setup.criterium %></td>
        <td><%= criteria_setup.criteria_name %></td>
        <td><%= criteria_setup.description %></td>
        <td><%= criteria_setup.value %></td>
        <td><%= criteria_setup.real_value %></td>
        <td><%= link_to 'Show', criteria_setup %></td>
        <td><%= link_to 'Edit', edit_criteria_setup_path(criteria_setup) %></td>
        <td><%= link_to 'Destroy', criteria_setup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

