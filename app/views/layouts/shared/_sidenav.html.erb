<ul id='slide-out' class='sidenav'>
	<li>
	<div class='user-view'>
		<div class='background bgcolortest'>
			<%= image_tag  "/img/gb.png", class:'responsive-img' %>
		</div>
		<%= link_to   user_path(current_user) do%>       
			<%= image_tag  "/img/Blank-Avatar.jpg", class:'circle' %>
		<% end %>
		<a href='#name'><span class='white-text name text-shadow'><%= current_user.full_name %></span></a>		
		<a href='#email'><span class='white-text text-shadow email'><%= current_user.sector.name %></span></a>
	</div>
	</li>	
	<li>
		<ul class='collapsible'>
			<li>
				<div class='collapsible-header'><i class='material-icons'>event</i>Agenda</div>
				<div class='collapsible-body'>
					<ul>						
						<li>
							<% if can? :create, @events %>
								<%= link_to  'Eventos', events_path  %>
							<% end %>
						</li>						
					</ul>
				</div>
			</li>
			<li>
				<div class='collapsible-header'><i class='material-icons'>computer</i>Sistemas</div>
				<div class='collapsible-body'>
					<ul>						
						<li>
							<% if can? :read, @events %>
								<%= link_to  'Simulador de taxas - PF', simulation_index_url(client_type: 0) %>
							<% end %>
							<% if can? :read, @events %>
								<%= link_to  'Simulador de taxas - PJ', simulation_index_url(client_type: 1) %>
							<% end %>
							<%= link_to 'Taxas',  taxes_path%>
							<%= link_to 'Análise de crédito', requisitions_path %>
						</li>						
					</ul>
				</div>
			</li>
			<li>
				<div class='collapsible-header'><i class='material-icons'>insert_chart</i>Relatórios diversos</div>
				<div class='collapsible-body'>
					<ul>
						<li>
							<%= link_to 'Carteira Diária', goals_path %>
						</li>
						<% report_type.each do |type| %>
						<li>
							<%= link_to type.report_type.name, reports_index_url(type: type.report_type_id) %>
						</li>
						<% end %>
						<% if current_user.location.name != "PA00"%>
							<li>
								<%= link_to 'Resumo', reports_from_location_path %>
							</li>
						<%end%>
						<li>
							<%= link_to 'Resumo Consolidado', reports_from_location_url(filter: 'consolidado') %>
						</li>
					</ul>
				</div>
			</li>
			<li>
				<div class='collapsible-header'><i class='material-icons'>cloud_download</i>Downloads</div>
				<div class='collapsible-body'>
					<ul>
						<li>
							<%= link_to  'Documentos', docfiles_path %>					
						</li>			
						<li>								
							<%= link_to  'Marketing', normatives_path  %> 								
						</li>			
					</ul>
				</div>
			</li>		     
		
			<li>				
				<div class='collapsible-header'>						
					<i class='material-icons'>developer_board</i>Publicações						
				</div>
				<div class='collapsible-body'>
					<ul>					
							<li>
								<%= link_to  'Posts', posts_path  %>
							</li>							
							<li>
									<%= link_to  'Jornal Mural', @daily_news  %>
							</li>
							<% if can? :create, @posts %>						
								<li>
									<%= link_to  'Novo Jornal', new_journal_path  %>
								</li>
								<li>
									<%= link_to  'Novo Post', new_post_path  %>
								</li>	
							<% end %>							
					</ul>
				</div>
			</li>						
			<% if current_user.admin? %>
			<li>				
				<div class='collapsible-header'><i class='material-icons'>settings</i>Configurações</div>
				<div class='collapsible-body'>
					<ul>					
						<li>
							<%= link_to  'Usuários', users_index_path  %>
						</li>							
						<li>
							<%= link_to  'Importação de dados', config_path  %>
						</li>
						<li>
							<%= link_to  'Teste', goals_reports_path  %>
						</li>							
					</ul>
				</div>
			</li>
			<% end %>

		</ul>	
	</li>
	<li><div class='divider'></div></li>
	<li><%= link_to 'Logout',  destroy_user_session_path, method: 'delete' %></li>
</ul>  