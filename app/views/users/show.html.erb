
 <div class='row'>
    <div class='col s12 m12'>
      <div class='card'>
        <div class='card-image background-user'>
          <img src='https://i0.wp.com/pedromiguellaw.com/wp-content/uploads/2014/04/bokeh-cover-bg.jpg' class='responsive-img background-user'>         
            <span class='card-title'>
              <img src='https://bgcburbank.org/wp-content/uploads/2017/09/Blank-Avatar.jpg' alt='' class='user-avatar'>
              <%= @user.full_name %> </br>
              <%= @user.email %>
            </span>
        </div>
        <div class='card-content'>
            
            <h4><%= @user.full_name %></h4>
            
            <div class='field'>
              <h6>Login: <%= @user.login %></h6>
            </div>                  
            <div class='field'>
              <h6>Cargo: <%= @user.role %> </h6>
            </div>
            <div class='field'>
              <h6>Localização: <%= @user.site_location %> </h6>
            </div>
        </div>        
      </div>
    </div>
  </div>
