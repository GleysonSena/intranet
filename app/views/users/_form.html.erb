<div class="container">
  <%= form_with(model: user, local: true, multipart: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :full_name %>
      <%= form.text_field :full_name %>
    </div> 
    <div class="field">
      <%= form.label :login %>
      <%= form.text_field :login %>
    </div> 
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div> 
    <div class="field">
      <%= form.label :birthday %>
      <%= form.text_field :birthday %>
    </div> 
    <div class="field">
      <%= form.label :location %>
      <%= form.select :location, Location.all.keys.map { |w| [w.humanize, w] }%>
    </div> 
    <div class='field'>
      <%= form.label :kind %><br />  
      <%= form.select :kind, User.kinds.keys.map { |w| [w.humanize, w] }%>
  	</div>
    <div class="field">
      <%= form.label :role %>
      <%= form.select :role, User.roles.keys.map { |w| [w.humanize, w] }%>
    </div> 
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div> <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div> 
    

    

    <div class="actions">    
      <%= form.submit 'Salvar', class:'btn' %>
    </div>
  <% end %>
</div>