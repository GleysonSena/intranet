    <%= form.datetime_field :end, class:'end_hidden', required: true %>
  </div>
  <div class="input-field">
    <%= form.color_field :color %>
  </div>
  <div class="row"
    <div class="actions">
      </br>
      <%= form.submit 'Criar Evento', class:'btn' %>    
    </div>
    </br>
