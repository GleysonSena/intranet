
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.text_field :title %>
  <%= form.text_field :fstart, class:'start_hidden datepicker' %>
  <%= form.text_field :fend, class:'end_hidden datepicker' %>  
  <%= form.text_field :start_time, class:'start_time timepicker' %>  
  <%= form.text_field :end_time, class:'end_time timepicker' %>  
  <%= form.color_field :color %>

  <div class="actions start_build">
    <%= form.submit %>
  </div>
<% end %>
