
<div class='container'>

<h1>Requisitions</h1>
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Requisition status</th>
        <th>Requisition category</th>
        <th>Requisition type</th>
        <th>Requester</th>
        <th>Flag</th>
        <th>User Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requisitions.each do |requisition| %>
        <tr>
          <td><%= link_to requisition.title, requisition %></td>
          <td><%= requisition.description[0..120] %></td>
          <td><%= requisition.requisition_status.name %></td>
          <td><%= requisition.requisition_category.name %></td>        
          <td><%= requisition.requisition_type %></td>
          <td><%= requisition.requester.login %></td>
          <td><%= requisition.flag %></td>
          <td><%= requisition.site_location %></td>
          <td><%= link_to 'Show', requisition %></td>
          <td><%= link_to 'Edit', edit_requisition_path(requisition) %></td>
          <td><%= link_to 'Destroy', requisition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </br>
<div>

