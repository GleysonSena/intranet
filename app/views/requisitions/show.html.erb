<div class='row'>
  <div class="col s12 m6 offset-m1">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><h4><%= @requisition.title %></h4></span>
          <strong>Descrição:</strong>
        <p><%= @requisition.description %></p>
      </div>
      <div class="card-action">
        <strong>Categoria:</strong>
        <%= @requisition.requisition_category.name %> </br>
        <strong>Status:</strong>
        <%= @requisition.requisition_status.name %> </br>
        <strong>Local:</strong>
        <%= @requisition.site_location %> </br>
        <strong>Solicitante:</strong>
        <%= @requisition.requester.full_name %> </br>
        <strong>Última Atualização realizada por:</strong>
        <%=@status_actions.last.action_by %> </br>
          <a id='asdfasf' class="waves-effect waves-light btn <%= "#{user_can_edit_requisition(current_user,@requisition.site_location, @requisition.requisition_status.id)}" %>"> Atender</a>
      </div>
    </div>
  </div>

  <div class='col s12 m4'>
    <ul class="collection with-header">
      <li class="collection-header"><h4>Documentos</h4></li>
      <% @requisition.files.each do |file| %>
        <li class="collection-item">
          <%= link_to file.filename, url_for(file), download:"" %>   
          <%if same_location(current_user, @requisition.site_location)%>
            <%= link_to(requisition_path(@requisition,file), method: :delete, data: { confirm: "Comfirma exclusão do documento?" }) do %> 
              <i class="material-icons secondary-content">delete_forever</i>
            <% end %>
          <%end%>
        </li>        
        <!--<li class="collection-item"><div>Alvin<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li>-->
      <% end %>
      <% if same_location(current_user, @requisition.site_location)  %>
        <li class="collection-item">
          <%= form_with(model: @requisition, local: true) do |form| %>                   
            <li class="collection-item">
              <%= form.file_field :files ,direct_upload: true, multiple: true, class:"", required: true, onchange:"checkFile()" %> </br>
            </li>
            <li class="collection-item">
              <%= form.submit "Anexar", class:"btn disabled", id:"docFilesUpload" %>
            </li>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render 'requisitions/shared/actions'%>
<div class='row'>
  <div class="col s12 m6 offset-m1" >
    <%= link_to 'Voltar', requisitions_path, class:'waves-effect waves-light btn' %>
  </div>
</div>

<div id='remote_container'></div>

<script>
  function startModal(){
    $('#remote_container').html('<%= j render "change_status" %>');
    $('#edit_status').modal();
    $('#edit_status').modal('open');    
  };
</script>



