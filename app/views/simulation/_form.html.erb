  <div id='simulation-form'>
    <% @credit_data.each do |l|%>      
      <div class="row">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">SIMULADOR DE TAXAS</span>
              <p><%= Date.current %></p></br>
              <form class='input-field'>
                <div class="row"> 
                  <div class="col s10">  
                   <label>Linha de crédito:</label>
                    <h5><%= l.name %></h5>      
                  </div>                  
                </div>
               <div class="divider"></div>
                
                <div class="row input-field"> 
                  
                    <div class="col s3 offset-s1">                                 
                      <label>Taxa Mínima:</label> 
                      <h5 class='minimun-percent'><%= l.tax_min %></h5>
                    </div>
                    <div class="col s3">  
                      <label>Taxa Máxima:</label> 
                      <h5 class='max-percent'><%= l.tax_max %></h5>
                    </div>
                </div>
               <div class="divider"></div>
                <div class="row">
                  
                  <div class="col s3 offset-s1">  
                    <label>Prazo Mínimo:</label> 
                    <h5><%= l.deadline_min %></h5>
                  </div>
                  <div class="col s3">  
                    <label>Prazo Máximo:</label> 
                    <h5><%= l.deadline_max %></h5>
                  </div>
                </div>
               <div class="divider"></div>
                <%= render  "informations" %>
                <div class="row">
                  
                  <div class="col s5">            
                  </div>
                  <div class="col s2  offset-s2">           
                     <label>Total desconto:</label>      
                  </div>
                  <div class="col s2">            
                    <div id='discount-tax'>
                    </div>     
                  </div>
                </div>
               <div class="divider"></div>
                <div class='row'>
                <div class="col  offset-s8"> 
                  <label>Taxa com Desconto :</label>           
                    <div id='total-discount-tax'>
                      <h4></h4>
                    </div>    
                  </div>
                </div>              
              </form>
            </div>
          </div>
        </div>
      </div>
           
    <%end%>
  </div>
