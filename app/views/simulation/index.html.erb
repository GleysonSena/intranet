<div class='container'>

  <h5>SIMULADOR DE TAXAS</h5>
  Selecione a liha de crédito:

  <%= form_tag(sim_path,  method: "get",remote: true) do %>
    <%= select_tag 'credit_line', options_for_select(@credit_lines.collect{ |u| [u.name, u.id] }), class:"custom-select" %>
    <%= submit_tag 'Nova Simulação' %>
  <% end %>

  <%= content_tag 'div', id:'simulation', data: { score_options: @score, reciproc_options: @reciproc,crl_options: @crl, garantia_options: @garantia } do %>
  <%end%>
</div>